<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".InputFragment">

    <!-- Knapp för cirklar lagt i CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/btn_horizontal_margin"
        android:layout_weight="0.33"
        android:backgroundTint="@color/green"
        app:cardElevation="@dimen/cv_elevation">

        <ImageButton
            android:id="@+id/btn_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/baseline_circle_24" />

    </androidx.cardview.widget.CardView>

    <!-- Knapp för trianglar lagt i CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/btn_horizontal_margin"
        android:layout_weight="0.33"
        android:backgroundTint="@color/green"
        app:cardElevation="@dimen/cv_elevation">

        <ImageButton
            android:id="@+id/btn_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:scaleX="3"
            android:scaleY="3"
            android:src="@drawable/baseline_play_arrow_24" />

    </androidx.cardview.widget.CardView>

    <!--Knapp för rektanglar lagt i CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/btn_horizontal_margin"
        android:layout_weight="0.33"
        android:backgroundTint="@color/green"
        app:cardElevation="@dimen/cv_elevation">

        <ImageButton
            android:id="@+id/btn_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/baseline_rectangle_24" />

    </androidx.cardview.widget.CardView>

</LinearLayout>